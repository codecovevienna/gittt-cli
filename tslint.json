{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "no-console": false,
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration"
    ],
    "await-promise": true,
    "no-unused-expression": true,
    "import-spacing": true,
    "no-shadowed-variable": [
      true,
      {
        // Needed for mocked helpers
        "function": false
      }
    ]
  },
  "rulesDirectory": []
}